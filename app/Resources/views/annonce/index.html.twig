{% extends 'base.html.twig' %}

{% block body %}
    <h2>Annonce list</h2>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Vendeur</th>
                <th>Telephone</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td><a href="{{ path('annonce_show', { 'id': annonce.id }) }}">{{ annonce.id }}</a></td>
                <td>{{ annonce.title }}</td>
                <td>{{ annonce.vendeur }}</td>
                <td>{{ annonce.telephone }}</td>
                <td>{{ annonce.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('annonce_show', { 'id': annonce.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('annonce_edit', { 'id': annonce.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('annonce_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
