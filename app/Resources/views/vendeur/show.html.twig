{% extends 'base.html.twig' %}

{% block body %}
    <h2>Vendeur</h2>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vendeur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ vendeur.nom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ vendeur.telephone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ vendeur.mail }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vendeur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('vendeur_edit', { 'id': vendeur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
