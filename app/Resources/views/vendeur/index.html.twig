{% extends 'base.html.twig' %}

{% block body %}
    <h2>Vendeur list</h2>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Telephone</th>
                <th>Mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vendeur in vendeurs %}
            <tr>
                <td><a href="{{ path('vendeur_show', { 'id': vendeur.id }) }}">{{ vendeur.id }}</a></td>
                <td>{{ vendeur.nom }}</td>
                <td>{{ vendeur.telephone }}</td>
                <td>{{ vendeur.mail }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('vendeur_show', { 'id': vendeur.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('vendeur_edit', { 'id': vendeur.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vendeur_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
